    void ShuffleQuestions()
    {
        var rnd = new Random();
        questions=questions
            .OrderBy(q => rnd.Next())
            .Select(q => new QuizQuestion
                {
                    Question = q.Question,
                    CorrectAnswer = q.CorrectAnswer,
                    Answers = q.Answers.OrderBy(a => rnd.Next())
                        .ToList()
                })
            .Take(totalQuestions)
            .ToList();
    }
    
    void RestartQuiz()
    {
        currentQuestion = 0;
        score = 0;
        showResult = false;
