        var set = new HashSet<string>(StringComparer.OrdinalIgnoreCase);
        if (q == null)
            return set;

        if (q.CorrectAnswers != null && q.CorrectAnswers.Count > 0)
        {
            foreach (var a in q.CorrectAnswers)
                set.Add(a);
        }
        else if (!string.IsNullOrWhiteSpace(q.CorrectAnswer))
