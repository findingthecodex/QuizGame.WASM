    void ShuffleQuestions()
    {
        var rnd = new Random();

        questions = questions
            .OrderBy(q => rnd.Next())
            .Select(q => new QuizQuestion
            {
                Question = q.Question,

                // Kopiera bÃ¥da (fÃ¶r sÃ¤kerhets skull)
                CorrectAnswers = q.CorrectAnswers.ToList(),

                Answers = q.Answers
                    .OrderBy(a => rnd.Next())
                    .ToList()
            })
            .Take(totalQuestions)
            .ToList();
    }

